{
  "version": 2,
  "name": "unravel-ghost-blog",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/ghost/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "database__client": "sqlite3",
    "database__connection__filename": "/tmp/ghost.db",
    "url": "https://unravel-ghost-blog.vercel.app"
  },
  "functions": {
    "index.js": {
      "maxDuration": 30
    }
  }
}