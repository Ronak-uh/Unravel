{
  "version": 2,
  "functions": {
    "index.js": {
      "runtime": "nodejs18.x"
    },
    "api/**/*.py": {
      "runtime": "python3.9"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ],
  "env": {
    "GHOST_URL": "@ghost_url",
    "GEMINI_API_KEY": "@gemini_api_key",
    "GOOGLE_API_KEY": "@google_api_key",
    "GOOGLE_CSE_ID": "@google_cse_id",
    "GHOST_ADMIN_API_KEY": "@ghost_admin_api_key"
  },
  "build": {
    "env": {
      "PYTHON_VERSION": "3.9"
    }
  },
  "installCommand": "npm install && pip install -r requirements.txt"
}